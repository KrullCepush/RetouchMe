<div class="wrap-signup">
    <div class="wrap-auth__header">Registration</div>
    <form class="form-auth" action="/signup" method="POST">
        <input type="text" name="username" placeholder="your username">
        <input type="text" name="login" placeholder="your login">
        <input type="text" name="email" placeholder="your email">
        <input type="text" name="password" placeholder="your password">
        <input type="submit">
    </form>
    {{#if message}}
    <div class="message my-3">{{message}}</div>
    {{/if}}
    <div class="mt-5 btn-warning mx-auto index-link">
        <a class="btn " href="/login">Go to login</a>
    </div>
</div>